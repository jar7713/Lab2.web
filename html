    <title>CSS Dasar</title>
    
    <!-- Deklarasi CSS Internal -->
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
        }
        header {
            min-height: 80px;
            border-bottom: 1px solid #77CCEF;
        }
        h1 {
            font-size: 24px;
            color: #0F189F;
            text-align: center;
            padding: 20px 10px;
        }
        h1 i {
            color: #6d6a6b;
        }
        /* ID Selector */
        #intro {
            background-color: #418fb1;
            color: #fff;
            padding: 20px;
        }
        /* Class Selector */
        .button {
            padding: 10px 20px;
            background-color: #E42A42;
            color: white;
            text-decoration: none;
            border-radius: 5px;
        }
        .button:hover {
            background-color: #d12a3a;
        }
    </style>
</head>
<body>
    <!-- Bagian Header -->
    <header>
        <h1>CSS Internal dan <i>Inline CSS</i></h1>
    </header>
    
